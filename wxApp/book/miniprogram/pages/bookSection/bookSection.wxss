page{
  background-color: #fff;
}
.introduce{
  display: flex;
  padding: 12rpx;
}
.detailleft image{
  width: 200rpx;
  height: 260rpx;
}
.detailright{
  flex: 1;
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #888;
}
.detailright .name{
  color: #222222;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}
.detailright view{
  margin:12rpx 0;
}
.joinBook{
  padding: 0 12rpx;
}
.brief{
  margin: 30rpx 0;
}
.introduceTitle ,.lastsection .last{
  padding: 0 12rpx;
  line-height: 70rpx;
  height: 70rpx;
  background: #be3948;
  color: #fff;
  font-size: 32rpx;
}
.introduceContent{
  padding: 12rpx;
  color: #888;
  font-size: 28rpx;
}

.lastsection{
  margin-bottom: 30rpx;
  color: #222;
  font-size: 28rpx;
}
.lastsection .section{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.listPage{
  display: flex;
  text-align: center;
  margin: 20rpx;
  align-items: center;
}
.listPage .pre{
  flex:1
}
.listPage .section{
  flex:2;
  height:68rpx;
  line-height: 68rpx;

}
.listPage .next{
  flex:1
}
.picker{
  height: 100%;
  font-size: 28rpx;
  color: #888;
}


