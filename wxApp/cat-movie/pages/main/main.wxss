/* pages/main/main.wxss */
.container{
  background-color: #f1f1f1;
}
.header{
  width: 100%;
  height: 45px;
  display: flex;
  background-color: #fff;
}
.header_hd{
  width: 45px;
  height: 45px;
  line-height: 45px;
  color: #b9b9b9;
  font-size: 12px;
  padding-left: 12px;
  display: flex;
  justify-content: left;
  align-items: center;
}

.header_hd text{
  color: #666;
  font-size: 14px;
}
.downtips{
  width: 0;
  height: 0;
  border-top: 5px solid #aaa;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  margin-left: 1px;
}
.header_bd{
  flex: 1;
  text-align: center;
  position: relative;
}
.header_bd-btn{
  width: 70px;
  height: 45px;
  display: inline-block;
  line-height: 45px;
  text-align: center;
  font-weight: bold;
  color: #666;
}
.bottomLine{
  width: 56px;
  height: 3px;
  background-color: #ef4238;
  position: absolute;
  bottom: 0;
  transition: left 0.5s;
}
.header_ft{
  width: 45px;
  height: 45px;
  text-align: center;
  line-height: 45px;
  display: flex;
  justify-content: center;
  align-content: center;
}
.header_ft image{
  width: 23px;
  height: 23px;
}