.wrapper .group{
  padding: 0 36rpx 10rpx 36rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.group-bar{
  height: 114rpx;
  text-align: center;
}
.group-title{
  position: relative;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 12px;
  border-radius: 4rpx;
  border: 1rpx solid #e0e0e2;
  font-size: 28rpx;
  color: #ccc;
  margin-top: 38rpx;
  overflow: visible;
}
.group-title::before,.group-title::after{
  content: "";
  width: 32rpx;
  height: 1rpx;
  position: absolute;
  top: 18rpx;
  border-bottom: 1px solid #000;
  transform: scale(0.5);
}
.group-title::before{
  left: -56rpx;
}
.group-title::after{
  right: -56rpx;
}
.group-title.on{
  border: 1rpx solid #ffc60e;
  color: #ffc60e;
}
.group-title.on::before,.group-title.on::after{
  border-bottom: 1px solid #ffc60e;
}
.group-content-item{
  position: relative;
  width: 100%;
  height: 194rpx;
  margin-bottom: 28rpx;
}
.group-content-item-desc{
  font-size: 36rpx;
  font-weight: 500;
  height: 156rpx;
  line-height: 52rpx;
  margin-right: 300rpx;
  margin-top: 8rpx;
  overflow: hidden;
  color: #333;
}

.group-content-item-img{
  position: absolute;
  right: 0;
  top: 0;
  height: 194rpx;
  width: 260rpx;
  vertical-align: top;
}
.group-content-item .visited .group-content-item-desc{
  color: #999;
}