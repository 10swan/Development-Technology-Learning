.star-login{
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  padding: 0 96rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.title {
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  font-family: Arial, Helvetica, sans-serif;
  margin-top: 40rpx;
}

.login-wrapper{
  width: 558rpx;
  height: 800rpx;
  margin-top: 50rpx;
  border:1rpx solid rgba(187, 180, 187, 1);
  overflow:hidden;
  box-shadow: 0 0 40rpx rgb(170, 170, 170, 1);
}

.avatar{
  width: 180rpx;
  height: 180rpx;
  margin: 82rpx auto 58rpx;
  overflow: hidden;
  border-radius: 50%;
}

.avatar image{
  width: 100%;
}

.input-group{
  width: 416rpx;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  border: 1px solid rgba(187,187,187,1);
  border-radius: 40rpx;
  padding-left: 40rpx;
  opacity: 0.5;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
label{
  display: inline-flex;
  width: 72rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}
input{
  flex: 1;
  height: 100%;
  border-radius: 40rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
}

.forgot-pwd{
  display: block;
  text-align: right;
  padding-right: 52rpx;
  margin: 20rpx auto 42rpx 0;
  box-sizing: border-box;
  border: 46rpx;
  line-height: 46rpx;
  opacity: 0.5;
  color: rgba(16, 16, 16, 1);
  font-size: 24rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.sign{
  width: 416rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 40rpx;
  background-color: rgba(51, 54, 67, 1);
  margin: 0 auto;
  margin-top: 36rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  font-family: Arial, Helvetica, sans-serif;
  opacity: 0.8;
}

.register{
  display: block;
  height: 46rpx;
  line-height: 46rpx;
  margin-top: 162rpx;
  flood-color: rgb(16, 16, 16, 1);
  font-size: 26rpx;
  text-align: center;
  font-family: Arial, Helvetica, sans-serif;
  opacity: 0.5;
}