/* pages/cart/cart.wxss */
.cart-box{
  padding-bottom: 100rpx;
}
.cart-list{
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 185rpx;
  border-bottom: 1px solid #e9e9e9;
  position: relative;
}
.cart-pro-select{
  position: absolute;
  left: 20rpx;
  width: 45rpx;
  height: 45rpx;
  top: 50%;
  transform: translateY(-50%);
}
.cart-pro-goods{
  position: absolute;
  left: 85rpx;
}
.cart-thumb{
  width: 185rpx;
  height: 185rpx;
}
.cart-pro-name{
  display: inline-block;
  width: 300rpx;
  height: 105rpx;
  line-height: 50rpx;
  overflow: hidden;
}
.cart-pro-price{
  height: 105rpx;
  line-height: 50rpx;
  float: right;
}
.cart-count-box{
  position: absolute;
  left: 285rpx;
  bottom: 20rpx;
  width: 250rpx;
  height: 80rpx;
}
.cart-count-box text{
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}
.cart-count-down,
  cart-count-add{
  font-size: 44rpx;
  width: 50rpx;
  height: 100%;
}
.cart-count-num{
  width: 150rpx;
}
.cart-del{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-style: 44rpx;
}
.cart-footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f2f2f2;
}
.cart-footer .pay{
height: 100%;
width: 200rpx;
background: red;
color: #fff;
text-align: center;
line-height: 90rpx;
}
.cart-footer-detail{
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.cart-footer-detail text{
  margin: 0 10rpx;
}