        </navigator>
      </view>
      <view class="newest-list">
        <navigator url="">
          <image src="/image/s5.png"></image>
          <view class="newest-name">
            <text>芹菜 100g</text>
          </view>
          <view class="newest-price">
            <text>$0.05</text>
