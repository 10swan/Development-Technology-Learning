/* pages/index/index.wxss */
swiper{
  height: 421rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.select-title,
.newest-title
{
  padding: 30rpx 0;
  text-align: center;
  color: #ab956d;
}
.select-top,
.select-bottom
{
  width: 100%;
  height: 375rpx;
}
.selected-top_small{
  width: 375rpx;
  height: 100%;
  float: left;
}
.selected-top_small navigator,
.selected-top_small image,
.select-bottom navigator,
.select-bottom image{
  width: 100%;
  height: 100%;
}
.newest-box{
  padding: 0 40rpx;
}
.newest-list{
  display: inline-block;
  width: 325rpx;
  height: 325rpx;
  margin: 0 20rpx 20rpx 0;
  background-color: #f4f6f5;
  text-align: center;
}
.newest-list image{
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx 0 10rpx;
}
.newest-list:nth-child(2n){
  margin-right: 0;
}